<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bluohazard.tourdengalam">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".firebases.MyFirebaseApp"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <activity android:name=".activities.detail.DetailRecommendationActivity" />
        <activity android:name=".activities.detail.DetailPlaygroundActivity" />
        <activity android:name=".activities.detail.DetailMountainActivity" />
        <activity android:name=".activities.ResultActivity" />
        <activity android:name=".activities.detail.DetailBeachActivity" />
        <activity android:name=".activities.list_vacation.PlaygroundActivity" />
        <activity android:name=".activities.list_vacation.MountainActivity" />
        <activity android:name=".activities.list_vacation.BeachActivity" />
        <activity android:name=".activities.menu.HistoryActivity" />
        <activity android:name=".activities.menu.SurveyRecommendationActivity" />
        <activity android:name=".activities.menu.AboutActivity" />
        <activity android:name=".activities.menu.ListVacationActivity" />
        <activity android:name=".activities.MainMenuActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>