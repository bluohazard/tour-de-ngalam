<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bluohazard.tourdengalam">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.PlaygroundActivity"></activity>
        <activity android:name=".activities.MountainActivity" />
        <activity android:name=".activities.BeachActivity" />
        <activity android:name=".activities.HistoryActivity" />
        <activity android:name=".activities.SurveyRecommendationActivity" />
        <activity android:name=".activities.AboutActivity" />
        <activity android:name=".activities.ListVacationActivity" />
        <activity android:name=".activities.MainMenuActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>