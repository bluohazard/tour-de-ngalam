<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    Tombol Back -->
    <style name="buttonBack">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:src">@drawable/back</item>
    </style>

    <!--    Title Atas -->
    <style name="titleTop" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--    Background Biru Atas -->
    <style name="backgroundTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--    Recycler View   -->
    <style name="rv_list_vacation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!--    Button Submit   -->
    <style name="buttonSubmit">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:background">@drawable/button_submit</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">18px</item>
        <item name="android:paddingBottom">18px</item>
        <item name="android:paddingStart">32px</item>
        <item name="android:paddingEnd">32px</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
