<resources>

    <!-- Base application theme. -->

    <!--    Light Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#024A83</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#FFFFFF</item>
        <item name="textColor">#757575</item>
        <item name="titleColor">#FFFFFF</item>
        <item name="navigationTopColor">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!--    Dark Theme -->
    <style name="DarkAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#32393d</item>
        <item name="colorPrimaryDark">#1a2744</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#1a2744</item>
        <item name="textColor">#FFFFFF</item>
        <item name="titleColor">#1488E9</item>
        <item name="navigationTopColor">#1a2744</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!--    transition dark/light mode -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--    Tombol Back -->
    <style name="buttonBack">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:src">@drawable/back</item>
    </style>

    <!--    Tombol Setting -->
    <style name="buttonSetting">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:src">@drawable/settings2</item>
    </style>

    <!--    Title Atas -->
    <style name="titleTop" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:textColor">?attr/titleColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--    Background Biru Atas -->
    <style name="backgroundTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">?attr/navigationTopColor</item>
    </style>

    <!--    Recycler View   -->
    <style name="rv_list_vacation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!--    Button Submit   -->
    <style name="buttonSubmit">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:background">@drawable/button_submit</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">18px</item>
        <item name="android:paddingBottom">18px</item>
        <item name="android:paddingStart">32px</item>
        <item name="android:paddingEnd">32px</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
