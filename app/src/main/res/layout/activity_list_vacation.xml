<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListVacationActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:onClick="onClickMainMenu"
        android:src="@drawable/back"
        app:layout_constraintRight_toLeftOf="@id/titleListVacation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleListVacation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/electrolize"
        android:paddingTop="33dp"
        android:text="List Vacation"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBeach"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_primary"
        android:drawableTop="@drawable/wishlist2"
        android:fontFamily="@font/electrolize"
        android:paddingTop="30dp"
        android:text="Beach"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMountain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_primary"
        android:drawableTop="@drawable/wishlist2"
        android:fontFamily="@font/electrolize"
        android:paddingTop="30dp"
        android:text="Mountain"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonBeach" />

    <Button
        android:id="@+id/buttonPlayground"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_primary"
        android:drawableTop="@drawable/wishlist2"
        android:fontFamily="@font/electrolize"
        android:paddingTop="30dp"
        android:text="Playground"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonMountain" />

</androidx.constraintlayout.widget.ConstraintLayout>